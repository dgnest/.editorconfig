root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = false

[*.{py,sh,feature}]
max_line_length = 80
indent_size = 4

# Tabs
[*.{less,css,Makefile,Vagrantfile}]
indent_style = tab

[*.go]
indent_style = tab
indent_size = 4

[Makefile,Vagrantfile]
indent_style = tab

[README.md]
max_line_length = 80